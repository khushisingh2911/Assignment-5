<!DOCTYPE html>
<html lang="en" data-theme="forest">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Lego Set</title>
  <link href="/css/main.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/daisyui@2.19.0/dist/full.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <%- include('partials/navbar', { page: '' }) %>
  <div class="container mx-auto py-8">
    <div class="hero bg-base-200">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set: <%= set.name %></h1>
          <p class="py-6">Update the details of the Lego set below.</p>
          <form action="/lego/editSet" method="POST" class="space-y-4">
            <div>
              <label for="name" class="block text-lg font-medium">Name</label>
              <input type="text" id="name" name="name" class="input input-bordered w-full" value="<%= set.name %>" required>
            </div>
            <div>
              <label for="year" class="block text-lg font-medium">Year</label>
              <input type="number" id="year" name="year" class="input input-bordered w-full" value="<%= set.year %>" required>
            </div>
            <div>
              <label for="num_parts" class="block text-lg font-medium">Number of Parts</label>
              <input type="number" id="num_parts" name="num_parts" class="input input-bordered w-full" value="<%= set.num_parts %>" required>
            </div>
            <div>
              <label for="img_url" class="block text-lg font-medium">Image URL</label>
              <input type="url" id="img_url" name="img_url" class="input input-bordered w-full" value="<%= set.img_url %>" required>
            </div>
            <div>
              <label for="theme_id" class="block text-lg font-medium">Theme</label>
              <select id="theme_id" name="theme_id" class="select select-bordered w-full" required>
                <% themes.forEach(theme => { %>
                  <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                    <%= theme.name %>
                  </option>
                <% }) %>
              </select>
            </div>
            <div>
              <label for="set_num" class="block text-lg font-medium">Set Number</label>
              <input type="text" id="set_num" name="set_num" class="input input-bordered w-full cursor-not-allowed" value="<%= set.set_num %>" readonly>
            </div>
            <button type="submit" class="btn btn-success mt-4">Update Set</button>
          </form>
          <!-- Delete Set Button -->
          <form action="/lego/deleteSet/<%= set.set_num %>" method="POST" class="mt-4">
            <button type="submit" class="btn btn-error">Delete Set</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
